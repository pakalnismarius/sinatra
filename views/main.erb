<h1><center> CUSTOMERS DATA BASE </center></h1>
<table class="table table-hover">
	<thead>
		<th>ID</th>
		<th>Name</th>
		<th>Surname</th>
		<th>Code</th>
		<th>Age</th>
	</thead>

	<tbody>
		<% @customers.each do |customers| %>
			<tr class='clickable-row' data-href='/customers/<%= customers.id %>'>
				<td><%= customers.id %></td>
				<td><%= customers.name %></td>
				<td><%= customers.surname %></td>
				<td><%= customers.code %></td>
				<td><%= customers.age %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<div class="text-center">

	<% if @page > 0 %>
	<a href="/?page=<%= @page - 1 %>" class="btn btn-defoult">Preveous</a>
	<%end%>
	<a href="/?page=<%= @page + 1 %>" class="btn btn-defoult">Next</a>
	<a href="/?page=<%= @last_page %>" class="btn btn-defoult">last</a>
</div>
<a href="/lentele" class="btn btn-primary">Lentele</a>
<script>
jQuery(document).ready(function($) {
    $(".clickable-row").click(function() {
        window.document.location = $(this).data("href");
    });
});
</script>